<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/Toy/Edit/{{Toy._id}}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit Toy</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Name</label>
         <input class="form-control" type="text" name="name" value={{ Toy.name }} required>
      </div>
        <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Image</label><br>
         <img src="{{ Toy.image }}" width="150" height="200">
         <input class="form-control" type="text" name="image" value={{ Toy.image }} required>
      </div>


      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" value={{ Toy.price }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Category</label>
         <input class="form-control" type="text" name="Category" value={{ Toy.category }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Quantity</label>
         <input class="form-control" type="number" name="quantity" value={{ Toy.quantity }} required >
      </div>


      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
</form>
</div>